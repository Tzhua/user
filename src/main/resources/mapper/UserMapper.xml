<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tzh.user.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.tzh.user.entity.User">
        insert into user (nickname,account_id,phone,gender,remark,create_time,update_time)
        VALUES(#{nickName},#{accountId},#{phone},#{gender},#{remake},#{createTime},#{updateTime})
    </insert>
    <delete id="deleteUserById" parameterType="int">
        delete from user where id=#{userId}
    </delete>

    <select id="selectUserById" resultType="com.tzh.user.entity.User">
        select * from user where id=#{id}
    </select>

    <select id="getAllUser" resultType="com.tzh.user.entity.User">
        select * from user
    </select>

    <update id="updateUserInfoById" parameterType="com.tzh.user.entity.User">
        UPDATE user SET nickname=#{nickName},phone=#{phone},gender=#{gender},remark=#{remake},update_time=#{updateTime}
        WHERE id=#{id};
    </update>
</mapper>